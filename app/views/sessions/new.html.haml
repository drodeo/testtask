= simple_form_for :sessions, url: sessions_path, :html => {class: 'form-signin'} do |f|
  %h2.form-signin-heading Вход в TaskManager
  = f.input_field :email, required: false, autofocus: true, class: 'form-control'
  = f.input_field :password, required: false, class: 'form-control'
  .form-actions
    = f.button :submit, 'Войти', class: 'btn btn-lg btn-primary btn-block'
    = link_to 'На главную', root_path, class: 'btn btn-lg btn-default btn-block'